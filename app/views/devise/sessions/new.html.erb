<div class="sign-form-container">
  <div class="sign-form">
    <h1>Connexion</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">
        <%= f.email_field :email %>
        <%= f.label :email %>
      </div>
      <div class="input-field">
        <%= f.password_field :password %>
        <%= f.label :password %>
      </div>
      <div class="actions">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      
      <button type="submit" class="waves-effect waves-light btn">Connexion</button>
      
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <div class="not-user">
        <label class="ask">Pas encore inscrit ?</label>
        <%= link_to "Inscription", new_registration_path(resource_name),:class => "waves-effect waves-light btn" %><br />
      </div>
      <% end -%>

    
      </div>
    <% end %>
  </div>
</div>